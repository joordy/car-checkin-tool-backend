{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "es2021": true
  },
  "extends": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "prettier/prettier": ["error", { "singleQuote": true, "parser": "flow" }]
  },
  "plugins": ["prettier"]
}
